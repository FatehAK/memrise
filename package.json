{
  "name": "memrise",
  "version": "1.0.0",
  "author": "fatehak",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/FatehAK/memrise"
  },
  "scripts": {
    "start": "vite --open",
    "build": "vite build",
    "preview": "vite preview",
    "prettier:check": "prettier --config .prettierrc.js -c '**/*.{html,css,js,json}'",
    "prettier:fix": "prettier --config .prettierrc.js --cache --cache-strategy content -w '**/*.{html,css,js,json}'",
    "eslint:check": "eslint --config .eslintrc.js --cache --cache-strategy content '**/*.js'",
    "eslint:fix": "pnpm eslint:check --fix",
    "stylelint:check": "stylelint --config .stylelintrc.js --aei --cache --cache-strategy content '**/*.{html,css}'",
    "stylelint:fix": "pnpm stylelint:check --fix"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-semistandard": "^17.0.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.0",
    "stylelint": "^14.16.0",
    "stylelint-config-clean-order": "^2.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-order": "^5.0.0",
    "vite": "^3.2.4"
  }
}
